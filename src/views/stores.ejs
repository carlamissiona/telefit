<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stores</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <nav>
            <a href="/dashboard/stores" class="btn">Stores</a>
            <a href="/dashboard/gyms" class="btn">Gyms</a>
            <a href="/dashboard/petshops" class="btn">Pet Shops</a>
            <a href="/logout" class="btn">Logout</a>
        </nav>

        <h1>Stores</h1>
        
        <div class="add-form">
            <h2>Add New Store</h2>
            <form action="/dashboard/stores/create" method="POST">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <input type="text" id="description" name="description" required>
                </div>
                <div class="form-group">
                    <label for="city">City:</label>
                    <input type="text" id="city" name="city" required>
                </div>
                <div class="form-group">
                    <label for="tagline">Tagline:</label>
                    <input type="text" id="tagline" name="tagline" required>
                </div>
                <div class="form-group">
                    <label for="image">Image URL:</label>
                    <input type="text" id="image" name="image" required>
                </div>
                <button type="submit" class="btn">Add Store</button>
            </form>
        </div>

        <div class="stores-list">
            <% stores.forEach(store => { %>
                <div class="card">
                    <img src="<%= store.image %>" alt="<%= store.name %>">
                    <h3><%= store.name %></h3>
                    <p><%= store.description %></p>
                    <p>City: <%= store.city %></p>
                    <p>Tagline: <%= store.tagline %></p>
                    
                    <form action="/dashboard/stores/edit/<%= store.id %>" method="POST">
                        <input type="text" name="name" value="<%= store.name %>" required>
                        <input type="text" name="description" value="<%= store.description %>" required>
                        <input type="text" name="city" value="<%= store.city %>" required>
                        <input type="text" name="tagline" value="<%= store.tagline %>" required>
                        <input type="text" name="image" value="<%= store.image %>" required>
                        <button type="submit" class="btn">Update</button>
                    </form>
                    
                    <a href="/dashboard/stores/delete/<%= store.id %>" class="btn" onclick="return confirm('Are you sure?')">Delete</a>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>