<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gyms</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <nav>
            <a href="/dashboard/stores" class="btn">Stores</a>
            <a href="/dashboard/gyms" class="btn">Gyms</a>
            <a href="/dashboard/petshops" class="btn">Pet Shops</a>
            <a href="/logout" class="btn">Logout</a>
        </nav>

        <h1>Gyms</h1>
        
        <div class="add-form">
            <h2>Add New Gym</h2>
            <form action="/dashboard/gyms/create" method="POST">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <input type="text" id="description" name="description" required>
                </div>
                <div class="form-group">
                    <label for="city">City:</label>
                    <input type="text" id="city" name="city" required>
                </div>
                <div class="form-group">
                    <label for="tagline">Tagline:</label>
                    <input type="text" id="tagline" name="tagline" required>
                </div>
                <div class="form-group">
                    <label for="image">Image URL:</label>
                    <input type="text" id="image" name="image" required>
                </div>
                <button type="submit" class="btn">Add Gym</button>
            </form>
        </div>

        <div class="gyms-list">
            <% gyms.forEach(gym => { %>
                <div class="card">
                    <img src="<%= gym.image %>" alt="<%= gym.name %>">
                    <h3><%= gym.name %></h3>
                    <p><%= gym.description %></p>
                    <p>City: <%= gym.city %></p>
                    <p>Tagline: <%= gym.tagline %></p>
                    
                    <form action="/dashboard/gyms/edit/<%= gym.id %>" method="POST">
                        <input type="text" name="name" value="<%= gym.name %>" required>
                        <input type="text" name="description" value="<%= gym.description %>" required>
                        <input type="text" name="city" value="<%= gym.city %>" required>
                        <input type="text" name="tagline" value="<%= gym.tagline %>" required>
                        <input type="text" name="image" value="<%= gym.image %>" required>
                        <button type="submit" class="btn">Update</button>
                    </form>
                    
                    <a href="/dashboard/gyms/delete/<%= gym.id %>" class="btn" onclick="return confirm('Are you sure?')">Delete</a>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>